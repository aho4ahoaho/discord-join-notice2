{
    "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
    "files": {
        "ignore": ["node_modules/**/*", "**/*.min.js", "**/*.map"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "all": false
            },
            "nursery": {
                "all": false
            },
            "complexity": {
                "noForEach": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "asNeeded",
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingComma": "all"
        }
    }
}
